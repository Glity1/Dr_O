# .env.example (프로젝트 루트에 위치)
# Gemini API 설정
GEMINI_API_KEY=your_gemini_api_key_here

# 데이터베이스 설정 (로컬 개발용)
DATABASE_URL=postgresql://review_user:review_password@localhost:5432/review_db

# 더미 사이트 URL
DUMMY_SITE_URL=http://localhost:5000

# 백엔드 설정
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# 스크래핑 설정
SCRAPING_INTERVAL=1800  # 30분 (초 단위)
AUTO_REPLY_ENABLED=true
AUTO_POST_ENABLED=false  # 안전을 위해 기본값 false